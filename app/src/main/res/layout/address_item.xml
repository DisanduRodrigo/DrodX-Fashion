<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardCornerRadius="4dp"
android:elevation="3dp"
android:layout_margin="3dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/select_address"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/address_add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/address_add_lane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lane"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address_add_name" />

        <TextView
            android:id="@+id/address_add_city"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:text="city"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address_add_lane" />

        <TextView
            android:id="@+id/address_add_postalcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="postallcode"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address_add_city" />

        <TextView
            android:id="@+id/address_add_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="number"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address_add_postalcode" />


    </LinearLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>